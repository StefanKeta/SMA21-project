<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.camera.ScanBarcodeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/black"
        >

        <androidx.camera.view.PreviewView
            android:id="@+id/activity_barcode_scanner_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/activity_barcode_scanner_background_iv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/barcode_scanner_background"
            />


    </LinearLayout>
</RelativeLayout>